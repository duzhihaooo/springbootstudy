<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.study.mapper.UserMapper">
	<resultMap id="umap" type="com.example.study.demo.User">
		<id property="id" column="id"></id>
		<id property="user_name" column="username"></id>
		<association property="role" javaType="com.example.study.demo.Role">
			<result property="id" column="id"></result>
			<result property="role_name" column="role_name"></result>
			<result property="user_id" column="user_id"></result>
		</association>
	</resultMap>
	
	<select id="listUser" resultMap="umap">
		select u.user_name,r.role_name from user u,role r where u.id = r.user_id;
	</select>
 </mapper>